{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": [
        "arn:aws:s3:::sliderule",
        "arn:aws:s3:::pgc-opendata-dems",
        "arn:aws:s3:::prd-tnm",
        "arn:aws:s3:::esa-worldcover",
        "arn:aws:s3:::noaa-ocs-nationalbathymetry-pds",
        "arn:aws:s3:::dataforgood-fb-data"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["s3:GetObject"],
      "Resource": [
        "arn:aws:s3:::sliderule/*",
        "arn:aws:s3:::pgc-opendata-dems/*",
        "arn:aws:s3:::prd-tnm/*",
        "arn:aws:s3:::esa-worldcover/*",
        "arn:aws:s3:::noaa-ocs-nationalbathymetry-pds/*",
        "arn:aws:s3:::dataforgood-fb-data/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["s3:PutObject"],
      "Resource": ["arn:aws:s3:::sliderule/config/*", "arn:aws:s3:::sliderule-public/*"]
    }
  ]
}
